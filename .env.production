# ============================================================================
# MARKETER APP - PRODUCTION ENVIRONMENT (DOCKER SWARM)
# ============================================================================
# Copy this file to .env.prod on your production server
# Update all values before deployment!
# NEVER commit this file with real secrets!

# ============================================================================
# DEPLOYMENT INFO
# ============================================================================
VERSION=latest
REGISTRY=your-registry.com  # Docker registry (e.g., docker.io/username)

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=marketer_db
POSTGRES_USER=marketer_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379/0

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=production

# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_STRONG_ADMIN_PASSWORD

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
USE_CLOUD=false

# Local Ollama (runs on host machine, not in Docker)
# For Docker containers to reach host machine, use host.docker.internal
OLLAMA_HOST=http://host.docker.internal:11434

# Local ComfyUI (runs on host machine for Apple Silicon GPU acceleration)
# For Docker containers to reach host machine, use host.docker.internal
COMFYUI_BASE_URL=http://host.docker.internal:8188

# Cloud LLM API Keys (if USE_CLOUD=true)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=

# ============================================================================
# VECTOR DATABASE (ChromaDB)
# ============================================================================
CHROMADB_HOST=http://chromadb:8000
CHROMA_TELEMETRY=false
CHROMA_ALLOW_RESET=false  # IMPORTANT: false in production!

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
API_URL=https://api.yourdomain.com

# ============================================================================
# SSL/TLS CONFIGURATION (Traefik)
# ============================================================================
ACME_EMAIL=admin@yourdomain.com  # For Let's Encrypt certificates

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=WARNING
SENTRY_DSN=

# ============================================================================
# SECURITY
# ============================================================================
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_RAG=true
ENABLE_MULTI_AGENT=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=false

# ============================================================================
# PERFORMANCE
# ============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000
