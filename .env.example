# ============================================================================
# MARKETER APP - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=marketer_db
POSTGRES_USER=marketer_user
POSTGRES_PASSWORD=marketer_pass
DATABASE_URL=postgresql://marketer_user:marketer_pass@localhost:5432/marketer_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# Admin user credentials (created on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# LLM Mode: cloud, local, hybrid
USE_CLOUD=false

# Local Ollama server
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# Cloud LLM API Keys (optional - for cloud mode)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=

# Default LLM provider: openai, anthropic, mistral, ollama
DEFAULT_LLM_PROVIDER=ollama

# ============================================================================
# VECTOR DATABASE (ChromaDB)
# ============================================================================
CHROMADB_HOST=http://localhost:8001
CHROMA_TELEMETRY=false
CHROMA_ALLOW_RESET=true

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_URL=http://localhost:8000

# Auth bypass for local development (DO NOT USE IN PRODUCTION!)
REACT_APP_BYPASS_AUTH=false

# ============================================================================
# AUTHENTICATION (Optional - for SaaS mode)
# ============================================================================
# Clerk.com configuration
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# BILLING (Optional - for SaaS mode)
# ============================================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@marketer.app

# ============================================================================
# STORAGE
# ============================================================================
# Storage mode: local, s3
STORAGE_MODE=local
STORAGE_PATH=/app/storage

# AWS S3 (if STORAGE_MODE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# Prometheus metrics
ENABLE_METRICS=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# CORS SETTINGS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# WORKER CONFIGURATION (Celery)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_RAG=true
ENABLE_MULTI_AGENT=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=false

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Enable debug mode (DO NOT USE IN PRODUCTION!)
DEBUG=true

# Enable SQL query logging
SQL_ECHO=false

# Enable hot reload
HOT_RELOAD=true
